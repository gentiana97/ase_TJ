<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Name task</th>
      <th>Effort driven</th>
      <th>Estimate effort</th>
      <th>Team</th>
      <th>Percentage task</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name_task %></td>
        <td><%= task.effort_driven %></td>
        <td><%= task.estimate_effort %></td>
        <td><%= task.team_id %></td>
        <td><%= task.percentage_task %></td>
        <td><%= task.priority %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

